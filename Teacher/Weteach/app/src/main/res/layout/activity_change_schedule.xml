                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView14"
                                    android:layout_width="55dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/icons8_2_96px" />

                                <Spinner
                                    android:id="@+id/spinner3"
                                    android:layout_width="114dp"
                                    android:layout_height="53dp"
                                    android:layout_weight="1"
                                    android:entries="@array/Days" />

                                <Spinner
                                    android:id="@+id/spinner2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="53dp"
                                    android:layout_weight="1"
                                    android:entries="@array/Hours" />

                                <ImageView
                                    android:id="@+id/imageView30"
                                    android:layout_width="46dp"
                                    android:layout_height="51dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundededittext"
                                    app:srcCompat="@drawable/ic_baseline_close_24" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnChange2"
                                android:layout_width="354dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundededittext"
                                android:backgroundTint="@color/edit_text"
                                android:text="+ Add more slots"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="413dp"
            android:layout_height="76dp"
            android:background="@color/main_theme"
            android:orientation="horizontal"
            android:padding="10dp"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/roundededittext"
                android:backgroundTint="@color/edit_text"
                android:minHeight="48dp"
                android:text="Change Schedule" />

        </LinearLayout>

        <androidx.cardview.widget.CardView

            android:id="@+id/cardView4"
            android:layout_width="414dp"
            android:layout_height="62dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#E1F1FD"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/round_button"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_weight="1"
                    android:background="@color/main_theme"
                    android:backgroundTint="@color/main_theme"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="36dp"
                            android:layout_height="38dp"
                            app:srcCompat="@drawable/po_8_avatar" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="299dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/nunito"
                            android:paddingLeft="20dp"
                            android:text="Hello, Teacher Dai"
                            android:textColor="@color/edit_text"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivNotification2"
                            android:layout_width="34dp"
                            android:layout_height="39dp"
                            app:srcCompat="@drawable/ic_baseline_notifications_none_24" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>