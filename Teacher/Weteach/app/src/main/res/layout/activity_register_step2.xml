<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterStep2Activity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack4"
            android:layout_width="137dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select an avatar (Required)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView93"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Please provide your avatar, Your avatar must be nice, clean and do not use any filter" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvCertificate"
            android:layout_width="195dp"
            android:layout_height="134dp"
            android:layout_margin="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/roundededittext" />

        <ImageButton
            android:id="@+id/btnCertificate"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_margin="50dp"
            android:backgroundTint="@color/main_theme"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            app:tint="@color/edit_text"
            tools:ignore="SpeakableTextPresentCheck" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identify Card Front (Required)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView92"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Please provide the front side of identify card." />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvFrontIC"
            android:layout_width="204dp"
            android:layout_height="137dp"
            android:layout_margin="20dp"
            android:background="@drawable/can_cuoc_cong_dan_ga" />

        <ImageButton
            android:id="@+id/btnFrontIC"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_margin="50dp"
            android:backgroundTint="@color/main_theme"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            app:tint="@color/edit_text"
            tools:ignore="SpeakableTextPresentCheck" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identify Card Back (Required)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Please provide the back side of identify card." />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvBackIC"
            android:layout_width="199dp"
            android:layout_height="135dp"
            android:layout_margin="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/the_chip_4802_1611665140" />

        <ImageButton
            android:id="@+id/btnBackIC"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_margin="50dp"
            android:backgroundTint="@color/main_theme"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            app:tint="@color/edit_text"
            tools:ignore="SpeakableTextPresentCheck" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Your Degree (Required)"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Please update your highest degree or your student card" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:entries="@array/subject" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvCertificate"
            android:layout_width="195dp"
            android:layout_height="134dp"
            android:layout_margin="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/roundededittext" />

        <ImageButton
            android:id="@+id/btnCertificate"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_margin="50dp"
            android:backgroundTint="@color/main_theme"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            app:tint="@color/edit_text"
            tools:ignore="SpeakableTextPresentCheck" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

          <CheckBox
              android:id="@+id/checkBox2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="I Agree to the Term of Services (Required)" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your information will be protected and not to be use for other purpose."
            android:textColor="@color/main_theme" />
      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnSignin2"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_margin="20dp"

          android:background="@drawable/round_button"
          android:text="Next Step"
          android:textColor="@color/edit_text" />

    </LinearLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>